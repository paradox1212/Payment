<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin"
    android:id="@+id/card_payment_single"
    app:cardElevation="@dimen/card_elevation"
    app:cardCornerRadius="@dimen/card_corner_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/car_image_width"
            android:layout_height="@dimen/car_image_height"
            android:layout_margin="@dimen/card_margin"
            android:src="@drawable/googleg_standard_color_18"
            android:scaleType="fitXY"
            android:id="@+id/card_image"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/card_margin"
            android:layout_marginTop="@dimen/card_margin"
            android:layout_marginBottom="@dimen/card_margin">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/payment_method_name"
                android:textColor="@color/black"
                android:text="payment name"
                android:layout_margin="@dimen/card_text_margin"
                android:textSize="@dimen/text_size_medium"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/payment_method_description"
                android:layout_marginRight="@dimen/card_text_margin"
                android:layout_marginLeft="@dimen/card_text_margin"
                android:layout_marginBottom="@dimen/card_text_margin"
                android:text="payment Description"
                android:textSize="@dimen/text_size_small"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>